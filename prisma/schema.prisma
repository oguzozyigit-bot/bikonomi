generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id             String   @id
  title          String
  category       String
  score          Int
  cheapestPrice  Int
  currency       String   @default("TRY")
  cheapestStore  String
  marketDeltaPct Int
  history        Json
  breakdown      Json
  offers         Json
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
